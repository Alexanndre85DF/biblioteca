rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para usuários
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.tipo_usuario == 'super_admin';
    }
    
    // Regras para escolas
    match /escolas/{escolaId} {
      allow read, write: if request.auth != null && 
        (get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.tipo_usuario == 'super_admin' ||
         resource.data.user_id == request.auth.uid);
    }
    
    // Regras para livros
    match /livros/{livroId} {
      allow read, write: if request.auth != null && 
        (get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.tipo_usuario == 'super_admin' ||
         resource.data.escola_id == get(/databases/$(database)/documents/escolas/$(resource.data.escola_id)).data.user_id);
    }
    
    // Regras para empréstimos
    match /emprestimos/{emprestimoId} {
      allow read, write: if request.auth != null && 
        (get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.tipo_usuario == 'super_admin' ||
         resource.data.escola_id == get(/databases/$(database)/documents/escolas/$(resource.data.escola_id)).data.user_id);
    }
  }
} 